<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/registeractivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ram.muthyam.abhyahasbeta10.Register_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="30sp"
            android:fontFamily="@font/archivo_black"
            android:gravity="center"
            android:text="Abhyahas"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold"
            android:transitionName="title"/>

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="30sp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="SIGN UP PAGE"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:transitionName="name"/>

        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/black"/>
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/default_male_profile_pic"
                app:civ_border_color="#000"
                app:civ_border_width="2dp" />

            <ProgressBar
                android:visibility="gone"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/progress"/>


            <LinearLayout
                android:id="@+id/choosepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/upload_pic_icon" />

                <TextView
                    android:id="@+id/pictext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Upload Picture"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:id="@+id/logbg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/splashscreen_bg"
            android:orientation="vertical"
            android:transitionName="colour">

            <LinearLayout
                android:id="@+id/logedits2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:transitionName="boxes">

                <EditText
                    android:maxLength="15"
                    android:id="@+id/fullname"
                    android:layout_width="260dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bottom_nav_background"
                    android:ellipsize="end"
                    android:hint="Full Name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#615B5B"
                    android:textSize="15sp"
                    android:transitionName="countrycode_transition" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="260dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bottom_nav_background"
                    android:ellipsize="end"
                    android:hint="Email ID"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#615B5B"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/college"
                    android:layout_width="260dp"
                    android:layout_height="35dp"
                    android:maxLength="27"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bottom_nav_background"
                    android:ellipsize="end"
                    android:hint="College Name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#615B5B"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/yearofstudy"
                    android:layout_width="260dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bottom_nav_background"
                    android:ellipsize="end"
                    android:hint="Year of study (i.e. 1st/2nd/3rd...)"
                    android:importantForAutofill="no"
                    android:inputType="numberSigned"
                    android:maxLength="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#615B5B"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="260dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/email_id"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/bottom_nav_background"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:hint="Password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#615B5B"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/visibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/password"
                        android:layout_alignEnd="@+id/password"
                        android:layout_alignBottom="@+id/password"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="6dp"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        android:src="@drawable/ic_baseline_visibility_24" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/confirmpassword"
                    android:layout_width="260dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bottom_nav_background"
                    android:ellipsize="end"
                    android:hint="Confirm Password"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#615B5B"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Select Gender :  "
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/radiogroupgender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="Male"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="Female"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/acceptvheckbox"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="I accept all the "
                    android:textColor="@color/white" />

                <TextView
                    android:onClick="termsandconditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Terms and Conditions"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/signup"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:elevation="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="sign up"
                    android:transitionName="button"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Already have an account ?  "
                            android:textColor="@color/white"
                            android:elevation="5dp"
                            android:transitionName="account_transition"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="LOG IN "
                            android:onClick="login"
                            android:elevation="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:transitionName="auth_transition"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>